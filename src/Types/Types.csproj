<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>NetFunctional.Types</RootNamespace>
        <NullableReferenceTypes>true</NullableReferenceTypes>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <WarningsNotAsErrors>CS8509</WarningsNotAsErrors>
    </PropertyGroup>
    
    <PropertyGroup>
        <PackageId>NetFunctional</PackageId>
        <Version>0.0.0-alpha</Version>
        <Authors>Tim Ray</Authors>
        <Product>NetFunctional</Product>
    </PropertyGroup>
    
    <PropertyGroup Condition="Exists('$(SolutionDir)')">
        <UseCommonOutputDirectory>true</UseCommonOutputDirectory>
        <BaseOutputPath>$(SolutionDir)/packages</BaseOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Analyzers\Analyzers\Analyzers.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false"/>
        <ProjectReference Include="..\Core\Core.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0"/>
    </ItemGroup>

</Project>
